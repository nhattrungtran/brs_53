<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title">
        <%= t "view.request.form_request" %>
      </h4>
    </div>
    <div class="modal-body">
      <%= form_for @request do |f| %>

        <%= f.label t("view.request.title_book") %>
        <%= f.text_field :title, class: "form-control" %>

        <%= f.label t("view.request.author") %>
        <%= f.text_field :author, class: "form-control" %>

        <%= f.label :category_id %>
        <%= f.select "category_id",
          options_for_select(@categories.collect{|u| [u.name, u.id]}),
          class: "select-form" %>

        <%= f.submit yield(@button), class: "btn btn-primary" %>
      <% end %>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">
      <% t "view.admin.close" %></button>
    </div>
  </div>
</div>
