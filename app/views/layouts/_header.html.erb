<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("logo_title"), static_pages_home_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("home"), static_pages_home_path %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= t "bookshelf_navbar" %> <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">

            <li><%= link_to t("all_book"), "#" %></li>
            <li><%= link_to t("most_popular"), "#" %></li>
            <li><%= link_to t("top_review"), "#" %></li>
            <li class="divider"></li>

          </ul>
        </li>
        <li><%= link_to t("about"), static_pages_about_path %></li>
        <% if logged_in? %>

          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "view.user.account" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">

              <li><%= link_to t("profile"), current_user %></li>
              <li><%= link_to t("settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <% if is_admin? %>
                <li>
                  <%= link_to t("view.admin.admin_title"),
                    admin_categories_path %></li>
              <% end %>
              <li>
                <%= link_to t("logout"), logout_path, method: :delete %>
              </li>

            </ul>
          </li>
        <% else %>
          <li><%= link_to t("sign_up"), signup_path %></li>
          <li><%= link_to t("login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
