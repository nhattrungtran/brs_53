<div id="header">
  <div class="header-holder">
    <div class="w1">
      <div class="w2">
        <div class="header-frame">
          <span class="slogan-twitter"><mark></mark> </span>
        </div>
        <div class="header-box header-subbox">
          <nav>
            <ul class="nav">
                <% if logged_in? %>
                  <li><%= link_to t("account"), current_user %></li>
                  <% if is_admin? %>
                    <li>
                    <%= link_to t("view.admin.admin_title"),
                      admin_categories_path %></li>
                   <% end %>
                  <li class="divider"></li>
                  <li>
                    <%= link_to t("logout"), logout_path, method: "delete" %>
                  </li>
                <% else %>
                  <li><%= link_to t("sign_up"), signup_path %></li>
                  <li><%= link_to t("login"), login_path %></li>
                <% end %>
            </ul>
          </nav>
        </div>
        <div class="header-box">
          <span class="menu-r"></span>
          <span class="menu-l"></span>
          <div class="menu-holder">
            <!-- menu -->
            <ul class="menu" id="nav">
              <li class="link-to-a">
                <%= link_to t("home"), books_path, class: "link-to-menu" %>
              </li>
              <li class="link-to-a" ><%= link_to t("view.user.review"),
                books_path %></li>
              <li class="link-to-a">
                <%= link_to t("all_book"), books_path %></li>
            </ul>
            <!-- search form -->
            <form class="search" action="#">
              <fieldset>
                <input type="text" class="text" value="Search" />
                <button type="submit" class="submit"></button>
              </fieldset>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
