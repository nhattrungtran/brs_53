<% @user ||= current_user %>
<div class="stats">
  <a class= "following-user" href="<%= following_user_path @user %>">
    <strong id="following" class="stat">
      <%= @user.following.size %>
    </strong>
    <%= t "view.user.following" %>
  </a>
  <a class= "follower-user" href="<%= followers_user_path @user %>">
    <strong id="followers" class="stat">
      <%= @user.followers.size %>
    </strong>
    <%= t "view.user.followers" %>
  </a>
</div>
